// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id        String    @id @default(cuid())
  title     String
  startTime DateTime
  endTime   DateTime
  capacity  Int
  location  String?
  status    String    @default("scheduled")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  bookings  Booking[]
}

model Booking {
  id                String    @id @default(cuid())
  classId           String
  class             Class     @relation(fields: [classId], references: [id])
  customerId        String?
  customer          Customer? @relation(fields: [customerId], references: [id])
  customerName      String
  customerEmail     String
  retirementVillage String?
  status            String    @default("active")
  attendanceStatus  String    @default("pending") // 'pending', 'attended', 'absent'
  cancelToken       String    @unique @default(cuid())
  createdAt         DateTime  @default(now())
  cancelledAt       DateTime?

  @@index([classId])
  @@index([customerId])
  @@index([customerEmail])
  @@index([cancelToken])
}

model Customer {
  id                    String    @id @default(cuid())
  name                  String
  email                 String    @unique
  password              String
  retirementVillage     String?
  birthdate             DateTime?
  phone                 String?
  address               String?
  emergencyContactName  String?
  emergencyContactPhone String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  bookings              Booking[]

  // Session Pass Management
  sessionPassRemaining  Int       @default(10)    // Sessions left on current pass
  sessionPassTotal      Int       @default(10)    // Total sessions in current pass (usually 10)
  sessionPassPurchaseDate DateTime? @default(now()) // When current pass was purchased
}

model SessionPassHistory {
  id              String    @id @default(cuid())
  customerId      String
  bookingId       String    @unique
  sessionNumber   Int       // Which session in the pass (1-10)
  classTitle      String
  attendedDate    DateTime
  createdAt       DateTime  @default(now())

  @@index([customerId])
}

model CompletedSessionPass {
  id              String    @id @default(cuid())
  customerId      String
  purchaseDate    DateTime
  completedDate   DateTime
  sessionsCount   Int       @default(10)
  sessions        CompletedSession[]
  createdAt       DateTime  @default(now())

  @@index([customerId])
}

model CompletedSession {
  id                    String              @id @default(cuid())
  completedPassId       String
  completedPass         CompletedSessionPass @relation(fields: [completedPassId], references: [id], onDelete: Cascade)
  sessionNumber         Int
  classTitle            String
  attendedDate          DateTime
  createdAt             DateTime            @default(now())

  @@index([completedPassId])
}
